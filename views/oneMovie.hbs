<div class="single-movie">
	<img src="{{movie.image}}" alt="{{movie.title}}" />
	<div class="desc-movie">
        <a href="/movies">Go Back</a>
		<p>{{movie.title}}</p>
		<p>{{movie.director}}</p>
		<p>Stars</p>

        <ul>
            {{#each movie.stars}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
        <p>{{movie.description}}</p>
        <div class="showtimes">
            {{#each movie.showtimes}}
                <span>{{this}}</span>
            {{/each}}
        </div>
	</div>
</div>
